import 'clean'

require 'osarch'

Environment = { }

Environment[ 'Architecture' ] = get_architecture()


Environment[ 'Name' ] = 'groovy'

Environment[ 'BuildDirectory' ] = get_builddir()

desc 'Clean everything.'
gen Clean , :clean
var[ :clean ].include( [ Environment[ 'BuildDirectory' ] , '**/*~' ] )

subdirs [ 'source' ]

desc 'Compile and link.'
task :compile => 'source/compile'

desc 'Compile and link setting debug flags as needed.'
task :cygwinc   => 'source/cygwinc'

task :default => :compile

task :test => :compile do
  # for some reason "require"ing launcher_test.rb here does not run the unit tests
  puts `ruby launcher_test.rb #{Environment[ 'BuildDirectory' ]}`
end
